{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
